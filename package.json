{
  "name": "companion",
  "version": "1.0.1",
  "description": "Event Companion",
  "main": "bitfocus-skeleton/main.js",
  "build": {
    "appId": "companion.bitfocus.no",
    "mac": {
      "category": "no.bitfocus.companion"
    },
    "win": {
      "target": "NSIS"
    },
    "directories": {
      "buildResources": "electron-build/",
      "output": "electron-output/"
    }
  },
  "scripts": {
    "start": "./bitfocus-skeleton/start.sh",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "windist": "electron-builder --win"
  },
  "repository": "https://github.com/bitfocus/companion",
  "keywords": [
    "bitfocus",
    "companion"
  ],
  "author": "Bitfocus AS",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.10.0"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "electron-debug": "^1.5.0",
    "express": "^4.16.3",
    "json-parser": "^1.1.5",
    "read-package-json": "^2.0.13",
    "socket.io": "^2.1.0",
    "socket.io-client": "^2.1.0",
    "streamdeck-driver": "https://github.com/bitfocus/streamdeck-driver.git"
  }
}
