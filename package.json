{
	"name": "companion",
	"version": "2.3.0",
	"description": "Companion",
	"main": "main.js",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "yarn build:writefile && cross-env DEVELOPER=1 nodemon --ignore './webui/' --ignore './launcher/' --ignore './dist/' -- main.js --bind-address 127.0.0.1 --extra-module-path=./module-local-dev",
		"update": "./tools/update.sh",
		"dist:webui": "yarn --cwd webui build",
		"dist": "zx ./tools/build_dist.mjs",
		"macdist": "yarn dist mac-x64",
		"macarmdist": "yarn dist mac-arm64",
		"windist": "yarn dist win-x64",
		"lindist": "yarn dist linux-x64",
		"rpidist": "yarn dist linux-arm7",
		"dist:prepare": "zx tools/build_prepare.mjs",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"dev-webui": "yarn --cwd webui dev",
		"format": "prettier --write .",
		"jsdoc": "jsdoc -c jsdoc.json",
		"build:writefile": "zx ./tools/build_writefile.mjs",
		"module:bulk": "zx ./tools/module_bulk.mjs"
	},
	"repository": "https://github.com/bitfocus/companion",
	"keywords": [
		"bitfocus",
		"companion"
	],
	"engines": {
		"npm": "please-use-yarn",
		"yarn": "^1.22",
		"node": "^14.17"
	},
	"author": "Bitfocus AS",
	"license": "MIT",
	"devDependencies": {
		"cross-env": "^7.0.3",
		"jest": "^28.0.3",
		"jsdoc": "github:bitfocus/jsdoc#3.6.6-patch",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.1",
		"tui-jsdoc-template": "^1.2.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2",
		"zx": "^4.3.0"
	},
	"dependencies": {
		"@elgato-stream-deck/node": "^5.4.0",
		"@estilles/expression-parser": "^1.0.0",
		"@julusian/jpeg-turbo": "^1.1.2",
		"@sentry/node": "^6.19.7",
		"@sentry/tracing": "^6.19.7",
		"archiver": "^5.3.1",
		"emberplus-connection": "^0.1.2",
		"env-paths": "^3.0.0",
		"express": "^4.17.3",
		"express-serve-zip": "^1.0.1",
		"fast-json-patch": "^3.1.1",
		"find-process": "1.4.7",
		"fs-extra": "^10.0.1",
		"get-port": "^6.1.2",
		"got": "^12.1.0",
		"infinitton-idisplay": "^1.1.2",
		"jsonpath-plus": "^6.0.1",
		"lodash-es": "^4.17.21",
		"meow": "^10.1.2",
		"moment": "^2.29.3",
		"nanoid": "^3.3.4",
		"node-fetch": "^2.6.7",
		"node-machine-id": "^1.1.12",
		"osc": "^2.4.3",
		"p-queue": "^7.1.0",
		"p-timeout": "^5.1.0",
		"pngjs": "^3.3.3",
		"respawn": "link:./vendor/respawn",
		"selfsigned": "^2.0.1",
		"semver": "^7.3.5",
		"sharp": "^0.30.5",
		"socket.io": "^4.5.1",
		"socketcluster-client": "^16.0.2",
		"supports-color": "^9.2.2",
		"systeminformation": "^5.11.15",
		"websocket": "^1.0.34",
		"winston": "^3.7.2",
		"winston-daily-rotate-file": "^4.6.1",
		"xkeys": "^2.3.3"
	},
	"collective": {
		"type": "donorbox",
		"url": "https://donorbox.org/bitfocus-opensource"
	},
	"resolutions": {
		"node-gyp-build": "github:julusian/node-gyp-build#v4.4.1-julusian.0"
	}
}
